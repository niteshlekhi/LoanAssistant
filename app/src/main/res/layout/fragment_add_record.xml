<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_5_dp"
    android:background="@color/yellow"
    tools:context=".fragments.AddRecord">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_30_dp"
            android:layout_marginTop="@dimen/margin_30_dp"
            android:background="@drawable/custom_list"
            android:gravity="center"
            android:text="@string/add_record"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/secondaryDarkColor"
            android:textSize="@dimen/text_20_sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10_dp"
            android:background="@drawable/bg_edittext"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="@dimen/margin_0_dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_5_dp"
                android:layout_weight="@dimen/weight_four"
                android:gravity="center"
                android:text="@string/name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_18_sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/custName"
                android:layout_width="@dimen/margin_0_dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5_dp"
                android:layout_weight="@dimen/weight_six"
                android:capitalize="words"
                android:gravity="center"
                android:hint="@string/hint_name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:maxLength="10"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10_dp"
            android:background="@drawable/bg_edittext"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="@dimen/margin_0_dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_5_dp"
                android:layout_weight="@dimen/weight_four"
                android:gravity="center"
                android:text="@string/phone"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_18_sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/custPhone"
                android:layout_width="@dimen/margin_0_dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5_dp"
                android:layout_weight="@dimen/weight_six"
                android:gravity="center"
                android:hint="@string/hint_phone"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="10"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10_dp"
            android:background="@drawable/bg_edittext"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="@dimen/margin_0_dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_5_dp"
                android:layout_weight="@dimen/weight_four"
                android:gravity="center"
                android:text="@string/aadhar"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_18_sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/custAadhar"
                android:layout_width="@dimen/margin_0_dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5_dp"
                android:layout_weight="@dimen/weight_six"
                android:gravity="center"
                android:hint="@string/hint_aadhar"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="12"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10_dp"
            android:background="@drawable/bg_edittext"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="@dimen/margin_0_dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_5_dp"
                android:layout_weight="@dimen/weight_four"
                android:gravity="center"
                android:text="@string/amount"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_18_sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/amount"
                android:layout_width="@dimen/margin_0_dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5_dp"
                android:layout_weight="@dimen/weight_six"
                android:gravity="center"
                android:hint="@string/hint_amount"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10_dp"
            android:background="@drawable/bg_edittext"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="@dimen/margin_0_dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_5_dp"
                android:layout_weight="@dimen/weight_four"
                android:gravity="center"
                android:text="@string/phone"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_18_sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/interestRate"
                android:layout_width="@dimen/margin_0_dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5_dp"
                android:layout_weight="@dimen/weight_six"
                android:gravity="center"
                android:hint="@string/hint_rate"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10_dp"
            android:background="@drawable/bg_edittext"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="@dimen/margin_0_dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_5_dp"
                android:layout_weight="@dimen/weight_three"
                android:gravity="center"
                android:text="@string/time"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_18_sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/time"
                android:layout_width="@dimen/margin_0_dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5_dp"
                android:layout_weight="@dimen/weight_three"
                android:gravity="center"
                android:hint="@string/hint_rate"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spTime"
                android:layout_width="@dimen/margin_0_dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_20_dp"
                android:layout_marginLeft="@dimen/margin_20_dp"
                android:layout_weight="@dimen/weight_four"
                android:textStyle="bold"
                app:ms_arrow_tint="@color/colorPrimaryDark"
                app:ms_background_color="@android:color/white"
                app:ms_text_color="@color/colorPrimaryDark" />

        </LinearLayout>

        <Button
            android:id="@+id/btnAddRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15_dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="@string/add"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_18_sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>