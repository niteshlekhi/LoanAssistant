<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/margin_20_dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.AddRecordFinal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10_dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_20_dp"
            android:layout_marginTop="@dimen/margin_20_dp"
            android:gravity="center"
            android:text="@string/review"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/secondaryDarkColor"
            android:textSize="@dimen/text_20_sp"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_12_dp"
            android:background="@drawable/bg_edittext">

            <EditText
                android:id="@+id/loanAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5_dp"
                android:hint="@string/hint_amount"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLength="6"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/black" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_12_dp"
            android:background="@drawable/bg_edittext">

            <EditText
                android:id="@+id/interestRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5_dp"
                android:hint="@string/hint_rate"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLength="10"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5_dp"
            android:gravity="center"
            android:text="Enter time duration"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="@dimen/margin_0_dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_12_dp"
                android:layout_weight="0.3"
                android:background="@drawable/bg_edittext"
                android:textAlignment="center">

                <EditText
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_5_dp"
                    android:hint="@string/hint_duration"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/black" />

            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/spDuration"
                android:layout_width="0dp"
                android:background="@drawable/bg_edittext"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_12_dp"
                android:layout_weight="0.5"></Spinner>
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10_dp"
            android:background="@drawable/bg_edittext">

            <EditText
                android:id="@+id/loanInstallment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_installment"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="2"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_20_dp"
            android:layout_marginTop="@dimen/margin_20_dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="center"
            android:padding="@dimen/margin_15_dp"
            android:text="@string/next"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_20_sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>