<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/margin_20_dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.AddCollector">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/custom_list"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_20_dp"
            android:layout_marginTop="@dimen/margin_20_dp"
            android:gravity="center"
            android:text="@string/new_employee"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/secondaryDarkColor"
            android:textSize="@dimen/text_20_sp"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10_dp"
            android:background="@drawable/bg_edittext">

            <AutoCompleteTextView
                android:id="@+id/ctrPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5_dp"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="@dimen/margin_15_dp"
                android:drawableStart="@drawable/phone"
                android:hint="@string/hint_phone"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="10"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10_dp"
            android:background="@drawable/bg_edittext">

            <EditText
                android:id="@+id/ctrName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5_dp"
                android:layout_weight="@dimen/weight_eight"
                android:drawableLeft="@drawable/person"
                android:drawablePadding="@dimen/margin_15_dp"
                android:drawableStart="@drawable/person"
                android:hint="@string/hint_name"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLength="40"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10_dp"
            android:background="@drawable/bg_edittext">

            <EditText
                android:id="@+id/ctrEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5_dp"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="@dimen/margin_15_dp"
                android:drawableStart="@drawable/email"
                android:hint="@string/hint_email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10_dp"
            app:passwordToggleEnabled="true"
            android:background="@drawable/bg_edittext">

            <EditText
                android:id="@+id/ctrPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5_dp"
                android:drawableLeft="@drawable/lock_black"
                android:drawablePadding="@dimen/margin_15_dp"
                android:drawableStart="@drawable/lock_black"
                android:hint="@string/hint_password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10_dp"
            android:background="@drawable/bg_edittext">


            <EditText
                android:id="@+id/ctrAadhar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/aadhar"
                android:drawablePadding="@dimen/margin_15_dp"
                android:drawableStart="@drawable/aadhar"
                android:hint="@string/hint_aadhar"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:maxLength="12"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnNextPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_20_dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_20_dp"
            android:padding="@dimen/margin_15_dp"
            android:text="@string/next"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_20_sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>