<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5_dp"
    android:background="@drawable/bg_edittext"
    android:orientation="horizontal"
    android:padding="@dimen/margin_5_dp"
    android:weightSum="1">

    <TextView
        android:id="@+id/lstCtrName"
        android:layout_width="@dimen/margin_0_dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5_dp"
        android:layout_weight="@dimen/weight_half"
        android:gravity="center"
        android:text="@string/name"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_18_sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lstPhone"
        android:layout_width="@dimen/margin_0_dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5_dp"
        android:layout_weight="@dimen/weight_half"
        android:gravity="center"
        android:text="@string/phone"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_18_sp"
        android:textStyle="bold" />

</LinearLayout>